{
    "name": "nativescript-collectionview-waterfall",
    "version": "0.0.0",
    "scripts": {
        "tsc": "cp src/canvaslabel.d.ts plugin && tsc -skipLibCheck -d",
        "build.esm": "tsc -skipLibCheck --target es2015 --module esnext --removeComments --outDir build/esm && node ./build.esm.js",
        "build": " \\cp README.md plugin/ && rm -f .tsbuildinfo && npm run tsc && npm run build.esm",
        "publish": "npm run build && lerna publish",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "demo.ios": "npm i && npm run tsc && cd demo && tns run ios",
        "demo.android": "npm i && npm run tsc && cd demo && tns run android",
        "clean.demo": "rimraf demo/hooks demo/node_modules demo/platforms",
        "clean": "rimraf plugin/ios plugin/android plugin/**/*.d.ts plugin/**/*.js plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "plugin.watch.android": "npm i && npm-watch build.android",
        "plugin.watch.ios": "npm i && npm-watch build.ios",
        "plugin.watch": "npm run plugin.watch.tsc & npm run plugin.watch.android & npm run plugin.watch.ios"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "@nativescript/core": "6.5.9",
        "@types/node": "^14.0.20",
        "@typescript-eslint/eslint-plugin": "3.6.0",
        "@typescript-eslint/parser": "3.6.0",
        "eslint": "7.4.0",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "nativescript-collectionview": "^2.0.34",
        "npm-watch": "^0.6.0",
        "prompt": "^1.0.0",
        "recursive-copy": "^2.0.10",
        "rimraf": "^3.0.2",
        "through2": "^4.0.2",
        "tns-platform-declarations": "^6.5.9next-2020-05-08-112112-01",
        "typescript": "~3.9.6"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/farfromrefug/nativescript-collectionview-waterfall.git"
    },
    "author": {
        "name": "Martin Guillon",
        "email": "martin@akylas.fr"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/farfromrefug/nativescript-collectionview-waterfall/issues"
    },
    "homepage": "https://github.com/farfromrefug/nativescript-collectionview-waterfall#readme",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
