{
    "extends": "../tsconfig",
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "tns-core-modules": ["./node_modules/@nativescript/core"],
            "tns-core-modules/*": ["./node_modules/@nativescript/core/*"],
            "~/*": [
                "app/*"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "../src/**/*.d.ts",
        "node_modules",
        "platforms"
    ]
}